<%= form_with model: @post, local: true do |form| %>
    <h4>投稿する</h4>
    
    <%= form.file_field :image, accept: "image/*" %>

    <p><%= form.label :投稿説明 %></br><%= form.text_area :post_text, placeholder: "例）綺麗なオリオン座が撮れました" %></p>
    
    <p><%= form.label :撮影日時 %></br><%= form.text_field :shoot_date, placeholder: "例）2022/1/1" %></p>
    
    <p><%= form.label :撮影時間 %></br><%= form.text_field :shoot_time, placeholder: "例）11:11:11" %></p>
    
    <p><%= form.label :撮影場所 %></br><%= form.text_field :shoot_address, placeholder: "例）福島市内の山から" %></p>
    
    <p><%= form.submit "投稿する", class: "btn btn-success" %></p>

<% end %>