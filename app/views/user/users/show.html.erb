<h2><%= @user.name %>の情報</h2>
<div class="container border  mb-3 p-3">
    <div class="row">
      <div class="col-2">
        <p>
          <%= image_tag @user.get_profile_image(100,100) %>
        </p>
      </div>
      <div class="col-10">
        <p class="text-left">
          ユーザーネーム：<%= @user.name %>
          <%= link_to  user_followings_path(@user) do %>
            フォロー<%= @user.followings.count %>
           <% end %>
           <%= link_to user_followers_path(@user) do %>
            フォロワー<%= @user.followers.count %>
          <% end %>
        </p>
          <div class="d-flex flex-row">
            <p>自己紹介：<%= @user.introduction %></p>
          </div>
          <div class="d-flex flex-row">
            <p>
              <%=link_to"いいね一覧",likes_user_path(@user), class: "btn btn-primary" %>
              <% if @user == current_user %>
                <%= link_to "編集",  edit_user_path(@user), class: "btn btn-success"%>
                <%= link_to "退会する",  user_unsubscribe_path(@user), class: "btn btn-danger"%>
              <% end %>
              <% if current_user != @user %>
                <% if current_user.following?(@user) %>
                  <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-danger" %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
                <% end %>
              <% end %>
              <% if @user.is_deleted == true %>
                <span style="color:red;" class="p-3">退会済み</span>
              <% end %>
            </p>
          </div>
      </div>
    </div>
</div>

<h2><%= @user.name %>の投稿</h2>
<% if @posts.exists? %>
  <% @posts.each do |pos| %>
    <div class="container border mb-3 p-3">
      <div class="row">
        <div class="col-2">
          <p>
            <%= image_tag @user.get_profile_image(100,100) %>
          </p>
        </div>
        <div class="col-10">
          <p class="text-left">ユーザーネーム：<%= pos.user.name %></p>
          <div class="d-flex flex-row">
              <p class="mr-3">撮影日時：<%= pos.shoot_date %></p>
              <p class="mr-3">撮影時間：<%= pos.shoot_time %></p>
              <p>説明：<%= pos.post_text %></p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= link_to post_path(pos.id) do %>
            <%= image_tag pos.get_image, :size =>'500x300' %>
          <% end %>
        </div>
        <div class="col">
          <div class="row d-flex align-items-center" style="height:80px;">
            <p>撮影場所：<%= pos.shoot_address %></p>
          </div>
          <div class="row d-flex align-items-center" style="height:80px;">
            <p>撮影日時：<%= pos.shoot_date %></p>
          </div>
          <div class="row d-flex align-items-center" style="height:80px;">
            <p>撮影時間：<%= pos.shoot_time %></p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div id="like_buttons_<%= pos.id %>">
            <%= render "user/likes/likes", pos: pos %>
          </div>
        </div>
        <div class="col">
          <p><%= link_to "#{pos.comments.count} コメント", post_path(pos.id) %></p>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <p>投稿はありません</p>
<% end %>