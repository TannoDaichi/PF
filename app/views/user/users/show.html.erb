
<div>
  <h3><%= @user.name %></h3>
  
</div>

<% @posts.each do |pos| %>
  <div class="container border mb-3 p-3">
    <div class="row">
      <div class="col-2">
        <p><%= image_tag pos.get_image, :size =>'100x100' %><!--%= image_tag 'sample-author1.jpg' %--></p>
      </div>
      <div class="col-10">
        <p class="text-left">ユーザーネーム：<%= pos.user.name %></p>
        <!--<div class="row">-->
        <!--  <div class="col-md-11">-->
        <div class="d-flex flex-row">
            <p class="mr-3">撮影日時：<%= pos.shoot_date %></p>
          <!--</div>-->
          <!--<div class="col-md-11">  -->
            <p class="mr-3">撮影時間：<%= pos.shoot_time %></p>
          <!--</div>-->
          <!--<div class="col-md-11">  -->
            <p>説明：<%= pos.post_text %></p>
          <!--</div>-->
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= link_to post_path(pos.id) do %>
          <%= image_tag pos.get_image, :size =>'500x300' %>
        <% end %>
      </div>
      <div class="col">
        <div class="row">
          <p>撮影場所：<%= pos.shoot_address %></p>
        </div>
        <div class="row">
          <%= image_tag pos.get_image, :size =>'300x200' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        いいね
      </div>
      <div class="col">
        コメント
      </div>
    </div>
  </div>
<% end %>