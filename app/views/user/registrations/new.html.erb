<div class="container">
  
  <h2>Sign up</h2>
  
  <%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "user/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "name" %>
      </div>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "password(6characters~)" %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "current-password", placeholder: "password confirmation" %>
      </div>
      <div class="actions" style="padding-top:10px;">
        <%= f.submit "Sign up", class: "btn btn-success"  %>
      </div>
  <% end %>
  
  <div style="padding-top:30px;">
    既にアカウントをお持ちの方は<%= link_to("こちら", "/users/sign_in") %>からログインしてください。
  </div>
  
</div>