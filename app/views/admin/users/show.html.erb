<h2><%= @user.name %>の情報</h2>
<div class="container border  mb-3 p-3">
    <div class="row">
      <div class="col-2">
        <p>
          <%= link_to admin_user_path(@user) do %>
            <%= image_tag @user.get_profile_image(100,100) %>
          <% end %>
        </p>
      </div>
      <div class="col-10">
        <p class="text-left">
          ユーザーネーム：<%= @user.name %>:
          フォロー<%= @user.followings.count %>:
          フォロワー<%= @user.followers.count %>
        </p>
          <div class="d-flex flex-row">
            <p>自己紹介：<%= @user.introduction %></p>
          </div>
          <div class="d-flex flex-row">
            <p>
             <%= link_to "編集",  edit_admin_user_path(@user), class: "btn btn-success"%>
            </p>
          </div>
      </div>
    </div>
</div>

<h2><%= @user.name %>の投稿</h2>
<% @posts.each do |pos| %>
  <div class="container border mb-3 p-3">
    <div class="row">
      <div class="col-2">
        <p>
          <%= link_to admin_user_path(pos.user_id) do %>
            <%= image_tag @user.get_profile_image(100,100) %>
          <% end %>
        </p>
      </div>
      <div class="col-10">
        <p class="text-left">ユーザーネーム：<%= pos.user.name %></p>
        <div class="d-flex flex-row">
            <p class="mr-3">撮影日時：<%= pos.shoot_date %></p>
            <p class="mr-3">撮影時間：<%= pos.shoot_time %></p>
            <p>説明：<%= pos.post_text %></p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= link_to admin_post_path(pos.id) do %>
          <%= image_tag pos.get_image, :size =>'500x300' %>
        <% end %>
      </div>
      <div class="col">
        <div class="row">
          <p>撮影場所：<%= pos.shoot_address %></p>
        </div>
        <div class="row">
          <%= image_tag pos.get_image, :size =>'300x200' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
          いいね数：<%= pos.likes.count %>
      </div>
      <div class="col">
        コメント数：<%= pos.comments.count %>
      </div>
    </div>
  </div>
<% end %>